<header class="bg-white">
    <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
        <div class="flex lg:flex-1">
            <a href="#" class="-m-1.5 p-1.5">
                <span class="sr-only">Store App</span>
                <img class="h-8 w-auto"
                    src="https://tailwindui.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600" alt="">
            </a>
        </div>
        <div class="lg:flex lg:gap-x-12">
            <a class="text-sm/6 font-semibold text-gray-900" asp-controller="Home" asp-action="Index">Home</a>
            <a class="text-sm/6 font-semibold text-gray-900" asp-controller="Product" asp-action="Index">
                Products (@await Component.InvokeAsync("ProductSummary"))
            </a>
            <a class="text-sm/6 font-semibold text-gray-900" asp-controller="Category" asp-action="Index">Categories</a>
            <a class="text-sm/6 font-semibold text-gray-900" asp-page="/Contact">Contact</a>
        </div>
        <div class="lg:flex lg:flex-1 lg:justify-end">
            <a class="text-sm/6 font-semibold text-gray-900" asp-area="" asp-page="/Cart">
                Cart (@await Component.InvokeAsync("CartSummary")) <span aria-hidden="true">&rarr;</span>
            </a>
            <a class="text-sm/6 font-semibold text-gray-900" asp-area="Admin" asp-controller="Dashboard"
                asp-action="Index">
                Admin <span aria-hidden="true">&rarr;</span>
            </a>
        </div>
    </nav>
</header>