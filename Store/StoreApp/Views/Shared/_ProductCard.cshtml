@model Product

<div class="col-sm-12 col-md-12 col-lg-6 col-xl-6 col-xxl-4 mb-3 d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <div class="card-header text-center">
            @Model?.ProductName
        </div>
        <img src="@Model?.ImageUrl" class="card-img-top p-3" alt="@Model?.ProductName">
        <div class="card-body d-flex flex-column justify-content-end">
            <div class="card-text">
                <div class="text-danger text-center lead rounded-2">
                    <strong>@Model?.Price.ToString("C2")</strong>
                </div>
            </div>
            <h5 class="card-title"></h5>
            <p class="card-text">@Model?.Summary</p>

            <div class="btn btn-group">
                <a class="btn btn-primary rounded-2" asp-controller="Product" asp-action="Get" asp-route-id="@Model?.ProductId">
                    <i class="fa-solid fa-circle-info"></i> Get Details
                </a>
                <form id="@Model?.ProductId" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="ProductId">
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()">
                    <button type="submit" class="btn btn-outline-primary rounded-2 ms-2">
                        <i class="fa-solid fa-cart-plus"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
