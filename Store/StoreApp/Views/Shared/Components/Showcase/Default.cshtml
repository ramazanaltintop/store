@model IEnumerable<Product>

<h1 class="font-bold leading-snug tracking-tight text-slate-800 mx-auto my-6 w-full text-2xl lg:max-w-3xl lg:text-5xl text-center">
    Showcase
</h1>

<div class="flex justify-center">
    <div class="w-full">
        <div class="my-3 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 justify-items-center">
            @foreach (Product product in Model)
            {
                <partial name="_ProductCard" model="@product" />
            }
        </div>
    </div>
</div>