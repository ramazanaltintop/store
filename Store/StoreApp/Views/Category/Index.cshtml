@model IEnumerable<Category>

<h1 class="font-bold leading-snug tracking-tight text-slate-800 mx-auto my-6 w-full text-2xl lg:max-w-3xl lg:text-5xl text-center">
    Categories
</h1>

<div class="relative flex flex-col rounded-lg bg-white shadow-sm border border-slate-200 my-4">
    <nav class="flex min-w-[240px] flex-col gap-1 p-1.5">
        @foreach (Category category in Model)
        {
            <div role="button"
                class="mt-1 text-slate-800 flex w-full items-center rounded-md p-3 transition-all hover:bg-slate-100 focus:bg-slate-100 active:bg-slate-100">
                @category.CategoryName
            </div>
        }
    </nav>
</div>