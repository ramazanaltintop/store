@model Product

<div class="text-center">
    <div class="row">
        <div class="col-md-12">
            <h6 class="display-6">
                @Model.ProductName
            </h6>
            <img class="img-fluid shadow rounded-3 my-3" src="@Model?.ImageUrl" alt="@Model?.ProductName">
            <p class="lead text-danger my-3">
                <b>@Model?.Price.ToString("c")</b>
            </p>
        </div>
    </div>

    <h2></h2>
    <p></p>
    <div class="btn-group">
        <a class="btn btn-outline-primary me-3" asp-controller="Home" asp-action="Index">
            <i class="fa-solid fa-house"></i> Home
        </a>

        <form id="@Model?.ProductId" asp-page="/cart" method="post">
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn btn-outline-success me-3">
                <i class="fa-solid fa-cart-plus"></i>
            </button>
        </form>

        <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
            <i class="fa-solid fa-list"></i> Products
        </a>
    </div>
</div>