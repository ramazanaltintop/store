@model IEnumerable<IdentityUser>

<div class="text-center">
    <div class="content-header">
        <h1 class="m-0">Users</h1>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="d-flex justify-content-end my-3">
                <a class="btn btn-outline-success" asp-action="Create">
                    <i class="fa-solid fa-plus"></i> Create
                </a>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>UserName</th>
                        <th>Roles</th>
                        <th>Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td user-name="@user.UserName" user-role="">-</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn btn-warning" asp-action="Update" asp-route-id="@user.UserName">Edit</a>
                                    <a class="btn btn btn-secondary" asp-action="ResetPassword" asp-route-id="@user.UserName">Reset Password</a>
                                    <form method="post" asp-action="DeleteOneUser">
                                        <input type="hidden" name="UserName" value="@user.UserName"/>
                                        <button type="submit" class="btn btn-danger rounded-start-0">
                                            <i class="fa-solid fa-trash"></i>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>