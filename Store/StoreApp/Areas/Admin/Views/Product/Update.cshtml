@model ProductDtoForUpdate

<div class="text-center">
    <div class="content-header">
        <h1 class="m-0">Update Product</h1>
    </div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data" class="ms-3 me-3">

    <div class="text-danger my-3" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ProductId">

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input class="form-control" asp-for="ProductName" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <textarea class="form-control" rows="4" asp-for="Summary"></textarea>
    </div>
    
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
    </div>

    <div class="form-group my-3">
        <img class="rounded shadow" src="@Model?.ImageUrl" width="125">
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input class="form-control" name="file" type="file" />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
        <button class="btn btn-primary" type="submit">
            <i class="fa-solid fa-floppy-disk"></i> Update
        </button>
        <a class="btn btn-outline-primary" asp-action="Index">
            <i class="fa-solid fa-list"></i> Products
        </a>
        </div>
    </div>
</form>