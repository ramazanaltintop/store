@model IEnumerable<Product>
<div class="text-center">

    <div class="content-header">
        <h1 class="m-0">Products</h1>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="d-flex justify-content-end my-3">
                    <a class="btn btn-outline-success" asp-action="Create">
                        <i class="fa-solid fa-plus"></i> Create
                    </a>
                </div>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Image Url</th>
                            <th>Product Name</th>
                            <th>Showcase</th>
                            <th>Price</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product product in Model)
                        {
                            <tr>
                                <td>@product.ProductId</td>
                                <td><img class="rounded" alt="@product.ProductName" src="@product.ImageUrl" width="50"></td>
                                <td>@product.ProductName</td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input type="checkbox"
                                        class="form-check-input"
                                        checked="@product.ShowCase"
                                        disabled >
                                    </div>
                                </td>
                                <td>@product.Price.ToString("c")</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.ProductId">
                                            <i class="fa-solid fa-pen-to-square"></i> Edit
                                        </a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.ProductId">
                                            <i class="fa-solid fa-trash"></i> Delete
                                        </a>
                                        <a target="_blank" class="btn btn-secondary" asp-area="" asp-controller="Product"
                                            asp-action="Get" asp-route-id="@product.ProductId">
                                            <i class="fa-solid fa-magnifying-glass"></i> View
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
